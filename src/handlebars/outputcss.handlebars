#frameContainer {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}

#frameContainer > iframe {
  width: 100%;
  height: 100%;
}
.plyr {
  height: 100%;
}

.plyr__video-wrapper {
  height: 100%;
}

.plyr__video-wrapper > video {
  height: 100%;
}

{{#if hideScrub}}
.plyr__progress__container {
  display: none !important;
}
.mejs__time-slider {
  display: none !important;
}
{{/if}}